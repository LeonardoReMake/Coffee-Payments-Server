# Production Environment Variables Example
# Copy this file to .env.production and update with your actual values

# Server Mode (omit or set to 'production' for production mode)
# RUN_MODE=production

# Gunicorn Configuration
GUNICORN_WORKERS=4
GUNICORN_PORT=8080
GUNICORN_TIMEOUT=60
GUNICORN_MAX_REQUESTS=5000
GUNICORN_MAX_REQUESTS_JITTER=500

# Django Core
SECRET_KEY=your-secret-key-here
DEBUG=False
ALLOWED_HOSTS=pay.tmetr.ru
BASE_URL=pay.tmetr.ru
CSRF_TRUSTED_ORIGINS=https://pay.tmetr.ru

# Database Configuration
DB_NAME=coffee_payment
DB_USER=your-db-user
DB_PASSWORD=your-db-password
DB_HOST=db
DB_PORT=5432

# PostgreSQL SSL (if needed)
# POSTGRES_SSL_MODE=require
# POSTGRES_SSL_CERT=/path/to/client-cert.pem
# POSTGRES_SSL_KEY=/path/to/client-key.pem
# POSTGRES_SSL_ROOT_CERT=/path/to/root-ca.pem

# TMetr API
TMETR_TOKEN=your-tmetr-token
TMETR_HOST=telemetry.fwsoft.ru

# Celery
CELERY_BROKER_URL=redis://redis:6379/0
CELERY_RESULT_BACKEND=redis://redis:6379/0

# Application Settings
ORDER_EXPIRATION_MINUTES=15
DEVICE_ONLINE_THRESHOLD_MINUTES=15

# Background Payment Check
PAYMENT_CHECK_INTERVAL_S=5
FAST_TRACK_LIMIT_S=300
FAST_TRACK_INTERVAL_S=2
SLOW_TRACK_INTERVAL_S=60
PAYMENT_ATTEMPTS_LIMIT=50
PAYMENT_API_TIMEOUT_S=3

# Skip migrations for Celery workers
# SKIP_MIGRATIONS=true  # Only for celery_worker and celery_beat
